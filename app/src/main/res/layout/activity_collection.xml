<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hina.a2048.CollectionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/collection"
            android:textAlignment="center"
            android:textColor="@color/colorTitle"
            android:textStyle="bold"
            android:textSize="50dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/collectionInstructions"
            android:textAlignment="center"
            android:textColor="@color/colorMain"
            android:textSize="15dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <GridLayout
                android:id="@+id/gridLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rowCount="4"
                android:columnCount="4"
                android:background="@color/colorBackground"
                android:padding="5dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="30dp">

                <ImageButton
                    android:id="@+id/imageButtonH"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:background="@drawable/locked"
                    android:minWidth="70dp"
                    android:minHeight="70dp"
                    android:layout_margin="5dp"
                    android:scaleType="fitXY"/>

                <ImageButton
                    android:id="@+id/imageButtonHe"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:background="@drawable/locked"
                    android:minWidth="70dp"
                    android:minHeight="70dp"
                    android:layout_margin="5dp"
                    android:scaleType="fitXY"/>

                <ImageButton
                    android:id="@+id/imageButtonLi"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:background="@drawable/locked"
                    android:minWidth="70dp"
                    android:minHeight="70dp"
                    android:layout_margin="5dp"
                    android:scaleType="fitXY"/>

                <ImageButton
                    android:id="@+id/imageButtonBe"
                    android:layout_row="0"
                    android:layout_column="3"
                    android:background="@drawable/locked"
                    android:minWidth="70dp"
                    android:minHeight="70dp"
                    android:layout_margin="5dp"
                    android:scaleType="fitXY"/>

                <ImageButton
                    android:id="@+id/imageButtonB"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:background="@drawable/locked"
                    android:minWidth="70dp"
                    android:minHeight="70dp"
                    android:layout_margin="5dp"/>

                <ImageButton
                    android:id="@+id/imageButtonC"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:background="@drawable/locked"
                    android:minWidth="70dp"
                    android:minHeight="70dp"
                    android:layout_margin="5dp"/>

                <ImageButton
                    android:id="@+id/imageButtonN"
                    android:layout_row="1"
                    android:layout_column="2"
                    android:background="@drawable/locked"
                    android:minWidth="70dp"
                    android:minHeight="70dp"
                    android:layout_margin="5dp"/>

                <ImageButton
                    android:id="@+id/imageButtonO"
                    android:layout_row="1"
                    android:layout_column="3"
                    android:background="@drawable/locked"
                    android:minWidth="70dp"
                    android:minHeight="70dp"
                    android:layout_margin="5dp"/>

                <ImageButton
                    android:id="@+id/imageButtonF"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:background="@drawable/locked"
                    android:minWidth="70dp"
                    android:minHeight="70dp"
                    android:layout_margin="5dp"/>

                <ImageButton
                    android:id="@+id/imageButtonNe"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:background="@drawable/locked"
                    android:minWidth="70dp"
                    android:minHeight="70dp"
                    android:layout_margin="5dp"/>

                <ImageButton
                    android:id="@+id/imageButtonNa"
                    android:layout_row="2"
                    android:layout_column="2"
                    android:background="@drawable/locked"
                    android:minWidth="70dp"
                    android:minHeight="70dp"
                    android:layout_margin="5dp"/>

                <ImageButton
                    android:id="@+id/imageButtonMg"
                    android:layout_row="2"
                    android:layout_column="3"
                    android:background="@drawable/locked"
                    android:minWidth="70dp"
                    android:minHeight="70dp"
                    android:layout_margin="5dp"/>

                <ImageButton
                    android:id="@+id/imageButtonAl"
                    android:layout_row="3"
                    android:layout_column="0"
                    android:background="@drawable/locked"
                    android:minWidth="70dp"
                    android:minHeight="70dp"
                    android:layout_margin="5dp"/>

                <ImageButton
                    android:id="@+id/imageButtonSi"
                    android:layout_row="3"
                    android:layout_column="1"
                    android:background="@drawable/locked"
                    android:minWidth="70dp"
                    android:minHeight="70dp"
                    android:layout_margin="5dp"/>

                <ImageButton
                    android:id="@+id/imageButtonP"
                    android:layout_row="3"
                    android:layout_column="2"
                    android:background="@drawable/locked"
                    android:minWidth="70dp"
                    android:minHeight="70dp"
                    android:layout_margin="5dp"/>

                <ImageButton
                    android:id="@+id/imageButtonS"
                    android:layout_row="3"
                    android:layout_column="3"
                    android:background="@drawable/locked"
                    android:minWidth="70dp"
                    android:minHeight="70dp"
                    android:layout_margin="5dp"/>

            </GridLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rowCount="1"
                android:columnCount="1"
                android:background="@color/colorBackground"
                android:padding="5dp"
                android:layout_centerInParent="true">

                <ImageButton
                    android:id="@+id/imageButtonCl"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:background="@drawable/locked"
                    android:minWidth="70dp"
                    android:minHeight="70dp"
                    android:layout_margin="5dp"/>

            </GridLayout>
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
